---
import "../styles/global.css";
import grogu from "../assets/grogu.png";
import TekBox from "../components/tekBox.astro";
import Particles from "../components/Particles.astro";
import { CarouselDemo } from "@/components/bleedCarousel";
import { ExpTabs } from "@/components/ExpTabs";
import "aos/dist/aos.css";
---

<html>
  <head>
    <title>Portfolio | Naveen Bharath</title>
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
    />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="viewport"
      content="initial-scale=1.3, maximum-scale=1.3,width=device-width"
    />

    <script>
      document.documentElement.classList.add("js");
    </script>
  </head>
  <div
    id="loading-overlay"
    class="absolute overflow-hidden top-0 left-0 w-screen h-screen z-[9999] bg-black flex items-center justify-center"
  >
    <div class="text-white font-clash animate-pulse text-xl">LOADING...</div>
  </div>
  <body
    class="overflow-y-scroll overflow-x-hidden bg-black scrollbar-hide scroll-smooth sm:hidden sm:overflow-hidden"
  >
    <div
      id="rotate-overlay"
      class="fixed top-0 left-0 w-screen h-screen z-[9998] bg-black flex flex-col items-center justify-center text-white text-center px-4 overflow-hidden sm:hidden"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-16 w-16 animate-bounce"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M19 14V7a2 2 0 00-2-2H7m6 6l5 5m0 0l-5 5m5-5H4"></path>
      </svg>
      <p class="mt-4 font-clash font-semibold text-lg">
        For the best experience,<br />please rotate your device.
      </p>
    </div>
    <div class="w-screen h-0 overflow-hidden">
      <Particles />
    </div>
    <div class="bg-black flex flex-col relative w-screen h-[100%]">
      <div
        id="falcon-bg"
        class="absolute bg-[url('../assets/falcon.jpg')] bg-cover bg-no-repeat bg-fixed min-h-[100vh] w-screen z-100"
        style="
          -webkit-mask: linear-gradient(to bottom, rgba(0,0,0,1) 0%, rgba(0,0,0,0.8) 60%, rgba(0,0,0,0) 100%);
          mask: linear-gradient(to bottom, rgba(0,0,0,1) 0%, rgba(0,0,0,0.8) 60%, rgba(0,0,0,0) 100%);
        "
      >
      </div>

      <div
        class="flex flex-col relative z-100 w-full h-full justify-center items-center pt-[20px]"
      >
      <div class="flex flex-col w-screen h-screen justify-center items-center ">
        <div
          class="outer-rings whitespace-nowrap rounded-full flex items-center justify-center"
        >
          <div class="inner-rings flex items-center justify-center">
            <div
              class="w-full h-full rounded-full flex flex-col items-center justify-center"
            >
              <p class="text-white font-clash font-semibold">
                HELLO THERE, I AM
              </p>
              <p class="text-white font-clash font-extrabold text-2xl">
                NAVEEN BHARATH
              </p>
              <div
                id="cycler"
                class="text-white font-clash opacity-100 transition-opacity duration-500 font-semibold pt-2"
              >
                STUDENT
              </div>
            </div>
            
          </div>
          
        </div>
        <div class="w-[1px] h-[50px] justify-self-center bg-white/40"></div>
                <p class="semibold font-clash text-white animate-bounce">SCROLL DOWN</p>
            <div class="w-[1px] h-[150px] justify-self-center bg-white/40"></div>
        </div>

        <div
          id="mid-bg"
          class="flex flex-col justify-center items-center bg-[url('../assets/bg_mid.jpeg')] bg-cover bg-no-repeat w-screen h-screen"
          style="
            -webkit-mask: linear-gradient(to bottom, rgba(0,0,0,0) 0%, rgba(0,0,0,1) 40%, rgba(0,0,0,1) 100%);
            mask: linear-gradient(to bottom, rgba(0,0,0,0) 0%, rgba(0,0,0,1) 40%, rgba(0,0,0,1) 100%);
            background-attachment: fixed;
          "
        >

          <p
            class="font-bold text-2xl font-stretch-[300px] text-white pl-[50px] font-clash"
            data-aos="fade-left"
            data-aos-delay="300"
          >
            ABOUT ME
          </p>
          <div
            class="w-[1px] h-[25px] justify-self-center bg-[linear-gradient(to_bottom,rgba(0,0,0,0)_0%,rgba(255,255,255,0.4)_20%,rgba(255,255,255,0.4)_80%,rgba(255,255,255,1)_100%)]"
          >
          </div>
          <div class="w-[1px] h-[15px] justify-self-center bg-white/40"></div>

          <div class="flex flex-row overflow-hidden justify-center w-full">
            <div
              class="text-white text-sm font-clash w-[250px] text-left pt-[80px] pr-2 tracking-widest pb-2 aos-item"
              data-aos="fade-right"
              data-aos-delay="300"
              data-aos-mirror="true"
            >
              <p class="font-semibold text-center pb-1">BORING STUFF</p>
              <p>
                I'M A 19 Y/O PRE-FINAL YEAR STUDENT AT VIT CHENNAI PURSUING MY
                ENGINEERING BACHELORS IN COMPUTER SCIENCE. MY HOBBIES ARE
                PLAYING GAMES, RICING MY DISTRO, WATCHING ANIME. I'M A HUGE STAR
                WARS FAN (surprise !!).
              </p>
            </div>
            <div
              class="outer-rings-1 whitespace-nowrap rounded-full flex items-center justify-center"
              data-aos="zoom-out"
              data-aos-delay="500"
            >
              <div class="inner-rings-1 flex items-center justify-center">
                <div
                  class="w-full h-full rounded-full flex flex-col items-center justify-center"
                >
                  <img src={grogu.src} alt="huh" width="150" height="150" />
                </div>
              </div>
            </div>

            <div
              class="text-white text-sm font-clash w-[250px] text-right pt-[80px] pr-2 tracking-widest pb-2"
              data-aos="fade-left"
              data-aos-delay="300"
            >
              <p class="font-semibold text-center pb-1">ACTIVELY WORKING ON</p>
              <ul>
                <li>SYSTEM'S PROGRAMMING</li>
                <li>MACHINE LEARNING</li>
                <li>WEB3 DEVELOPMENT</li>
                <li>ANDROID DEVELOPMENT</li>
                <li>RED TEAMING AND PENTESTING</li>
              </ul>
            </div>
          </div>
          <div class="w-[1px] h-60 justify-self-center bg-white/40"></div>
        </div>
        <div class="w-[1px] h-[150px] justify-self-center bg-white/40"></div>
        <div class="flex flex-col w-screen h-full items-center">
          <p
            class="font-bold text-2xl text-white pr-[80px] font-clash"
            data-aos="fade-right"
            data-aos-delay="300"
          >
            TECH STACKS
          </p>
          <div class="w-[1px] h-[30px] justify-self-center bg-white/40"></div>
          <div
            class="flex w-full justify-center items-center gap-2"
            data-aos="zoom-in-up"
            data-aos-delay="300"
          >
            <div class="flex flex-col gap-1">
              <TekBox url="/icons_tech/Dart.png" name="Dart" />
            </div>
            <div class="flex flex-col gap-1">
              <TekBox url="/icons_tech/Csharp.png" name="C#" />
              <TekBox url="/icons_tech/Flutter.png" name="Flutter" />
            </div>
            <div class="flex flex-col gap-1">
              <TekBox url="/icons_tech/NET core.png" name=".NET" />
              <TekBox url="/icons_tech/NumPy.png" name="NumPy" />
              <TekBox url="/icons_tech/rust.png" name="Rust" />
              <TekBox url="/icons_tech/PostgresSQL.png" name="PostgreSQL" />
              <TekBox url="/icons_tech/TensorFlow.png" name="TensorFlow" />
            </div>
            <div class="flex flex-col gap-1">
              <TekBox url="/icons_tech/astro.png" name="Astro" />
              <TekBox url="/icons_tech/bash.png" name="Bash" />
              <TekBox url="/icons_tech/c.png" name="C" />
              <TekBox url="/icons_tech/cpp.png" name="C++" />
              <TekBox url="/icons_tech/html.png" name="HTML" />
            </div>
            <div class="flex flex-col gap-1">
              <TekBox url="/icons_tech/css.png" name="CSS" />
              <TekBox url="/icons_tech/django.png" name="Django" />
              <TekBox url="/icons_tech/python.png" name="Python" />
              <TekBox url="/icons_tech/react.png" name="React" />
            </div>
            <div class="flex flex-col gap-1">
              <TekBox url="/icons_tech/Pandas.png" name="Pandas" />
              <TekBox url="/icons_tech/typescript.png" name="TypeScript" />
              <TekBox url="/icons_tech/wagmi.png" name="Wagmi" />
            </div>
            <div class="flex flex-col gap-1">
              <TekBox url="/icons_tech/tailwind.png" name="Tailwind" />
            </div>
          </div>
        </div>
        <div class="w-[1px] h-[150px] justify-self-center bg-white/40"></div>
        <p
          class="text-white font-clash font-bold text-xl ml-[50px]"
          data-aos="fade-left"
          data-aos-delay="300"
        >
          PROJECTS
        </p>
        <div class="w-[1px] h-[20px] justify-self-center bg-white/40"></div>
        <div class="w-screen" data-aos="fade-right">
          <CarouselDemo client:only="idle" />
        </div>
        <div
          class="w-[1px] h-[150px] justify-self-center bg-[linear-gradient(to_bottom,rgba(255,255,255,0.4),rgba(0,0,0,0))]"
        >
        </div>

        <div
          id="exp-bg"
          class="bg-[url('../assets/bg_3.jpg')] bg-cover bg-top bg-amber-50 h-full bg-no-repeat w-screen justify-center self-center items-center flex flex-col"
          style="
            -webkit-mask: linear-gradient(to bottom, rgba(0,0,0,0) 0%, rgba(0,0,0,1) 50%, rgba(0,0,0,1) 50%, rgba(0,0,0,0) 100%);
            mask: linear-gradient(to bottom, rgba(0,0,0,0) 0%, rgba(0,0,0,1) 50%, rgba(0,0,0,1) 50%, rgba(0,0,0,1) 100%);
            background-attachment: fixed;
          "
        >
          <div class="w-[1px] h-[150px] justify-self-center bg-white/40"></div>
          <p
            class="text-white font-clash font-bold text-xl mr-[50px]"
            data-aos="fade-right"
            data-aos-delay="300"
          >
            EXPERIENCE
          </p>
          <div class="w-[1px] h-[20px] justify-self-center bg-white/40"></div>
          <div class="pl-2" data-aos="fade-down" data-aos-delay="200">
            <ExpTabs client:load />
          </div>

          <p class="text-white font-clash font-bold text-xl pt-[20px]">
            CONTACTS
          </p>
          <div class="w-[1px] h-[20px] justify-self-center bg-white/40"></div>
          <div class="pb-[0px] flex flex-row items-center">
            <a class="icon_ref" href="https://x.com/nav_py" target="_blank"
              ><i
                class="fa-brands fa-x-twitter"
                style="padding: 8px; font-size: 20px; color: white"></i></a
            >
            <a
              class="icon_ref"
              href="https://www.instagram.com/axolotl.was.here/"
              target="_blank"
              ><i
                class="fa-brands fa-instagram"
                style="padding: 8px; font-size: 20px; color: white"></i></a
            >
            <a
              class="icon_ref"
              href="https://github.com/AxolotlHere"
              target="_blank"
              ><i
                class="fa-brands fa-github"
                style="padding: 8px; font-size: 20px; color: white"></i></a
            >
            <a
              class="icon_ref"
              href="https://linkedin.com/in/naveen-bharath-27569b2a9"
              target="_blank"
              ><i
                class="fa-brands fa-linkedin"
                style="padding: 8px; font-size: 20px; color: white"></i></a
            ><br />
          </div>
          <p class="text-white font-clash font-normal text-center pb-[50px]">
            EMAIL : snaveenbharath2005@gmail.com
          </p>
          <p class="text-white font-clash font-normal">
            MAY THE FORCE BE WITH YOU
          </p>
        </div>
      </div>
    </div>

    <script>
      const l_1 = [
        "Student",
        "Systems Programmer",
        "ML engineer",
        "Blockchain Developer",
        "Android Developer",
        "linux enthusiast",
        "Pentester",
      ];
      const cycler_ = document.getElementById("cycler");
      let i = 1;

      setInterval(() => {
        cycler_.classList.remove("opacity-100");
        cycler_.classList.add("opacity-0");
        setTimeout(() => {
          i = (i + 1) % l_1.length;
          cycler_.textContent = l_1[i].toUpperCase();
          cycler_.classList.remove("opacity-0");
          cycler_.classList.add("opacity-100");
        }, 500);
      }, 3000);
    </script>
    <script src="../js/main"></script>
    <script is:inline src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script is:inline>
      AOS.init();
    </script>
    <script>
      window.addEventListener("load", () => {
        const overlay = document.getElementById("loading-overlay");
        if (overlay) {
          overlay.classList.add(
            "opacity-0",
            "transition-opacity",
            "duration-500",
          );
          setTimeout(() => overlay.remove(), 500); // Remove after fade
        }
      });
    </script>
    <script>
      function checkOrientation() {
        const isPortrait = window.innerHeight > window.innerWidth;
        const overlay = document.getElementById("rotate-overlay");
        if (overlay) {
          if (isPortrait && window.innerWidth < 640) {
            overlay.classList.remove("hidden");
          } else {
            overlay.classList.add("hidden");
          }
        }
      }

      window.addEventListener("load", checkOrientation);
      window.addEventListener("resize", checkOrientation);
      window.addEventListener("orientationchange", checkOrientation);
    </script>
  </body>


</html>
